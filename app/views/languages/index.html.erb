<% title "Languages" %>

<table class="pretty">
  <tr>
    <th>Language</th>
    <th colspan="3">Actions</th>
  </tr>
  <% for language in @languages %>
    <tr>
      <td><%=h language.name %></td>
      <td><%= link_to image_tag("/images/documents2.png", { :size => "18x18", :alt => "Show", :title => "Show" }), language %></td>
      <td><%= link_to image_tag("/images/edit48.png", { :size => "18x18", :alt => "Edit", :title => "Edit" }), edit_language_path(language) %></td>
      <td><%= link_to image_tag("/images/delete48.png", { :size => "18x18", :alt => "Destroy", :title => "Destroy" }), language, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Language", new_language_path %></p>
