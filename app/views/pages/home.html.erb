<% title "Home" %>


<% if current_user %>
Your publications:

This is you:   ( <%= current_user.email %> ) 
<table class="pretty">
  <% for publication in @publication %>
<tr>
<td>
<%=h publication.title %>
</td>
</tr>
  <% end %>
</table>

<% else %>  
Please login:
  <% form_for @user_session do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :password %><br />
      <%= f.password_field :password %><br />
      <%= f.check_box :remember_me %><%= f.label :remember_me %>    
    </p>
    <p><%= f.submit "Login" %></p>
  <% end %>
<% end %>  
