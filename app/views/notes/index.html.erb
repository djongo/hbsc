<% title "Notes" %>

<table class="pretty">
  <tr>
    <th>Publication</th>
    <th>#</th>
    <th>User</th>
    <th>State</th>
    <th>Content</th>
    <th colspan="3">Actions</th>
  </tr>
  <% for note in @notes %>
    <tr>
      <td><%=h note.publication.title %></td>
      <td><%=h note.publication.id %></td>
      <td><%=h note.user.full_name %></td>
      <td><%=h note.state.humanize %></td>
      <td><%=h note.content %></td>
      <td><%= link_to "Show", note %></td>
      <td><%= link_to "Edit", edit_note_path(note) %></td>
      <td><%= link_to "Destroy", note, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Note", new_note_path %></p>
