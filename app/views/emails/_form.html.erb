<% form_for @email do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :trigger %><br />
    <%= f.text_field :trigger %>
  </p>
  <p>
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p><%= f.submit %></p>
<% end %>
