<% form_for @publication do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :language_id %><br />
    <%= f.text_field :language_id %>
  </p>
  <p>
    <%= f.label :publication_type_id %><br />
    <%= f.text_field :publication_type_id %>
  </p>
  <p><%= f.submit %></p>
<% end %>
